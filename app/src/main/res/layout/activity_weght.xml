<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weght"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhbit.www.a2weight.weght">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="计算你的标准体重"
        android:ems="10"
        android:id="@+id/tv_title"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:elevation="1dp"
        android:textSize="36sp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="计  算"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/btn_calculate"
        android:textSize="36sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:id="@+id/ly_sex"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="性别"
            android:ems="10"
            android:id="@+id/tv_sex"
            android:textSize="26sp"
            android:elevation="1dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/rg_sex"
            android:orientation="horizontal">

            <RadioButton
                android:text="女性"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_female"
                android:textSize="30sp"
                android:gravity="center_vertical" />

            <RadioButton
                android:text="男性"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_male"
                android:gravity="center_vertical"
                android:textSize="30sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ly_height"
        android:layout_alignTop="@+id/ly_sex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp">

        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="身高"
            android:ems="10"
            android:id="@+id/tv_height"
            android:textSize="30sp" />

        <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_height"
            android:singleLine="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="cm"
            android:ems="10"
            android:id="@+id/tv_cm"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>
